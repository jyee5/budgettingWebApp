                    <div class="chart-container" style="position: relative; height:20vh; width:45vw">
                        <canvas id="pie-chart" width="30" height="30"></canvas>
                    </div>
                    <script>
                        let mychart = document.getElementById("pie-chart");
                        let piechart = new Chart(mychart, {
                            type: 'pie',
                            data: {
                            labels: <%- JSON.stringify(expCategories); %>,
                            datasets: [{
                                label: "Total Spending ($) of the Month",
                                backgroundColor: ["#3e95cd", "#8e5ea2","#3cba9f","#e8c3b9","#c45850"],
                                data: <%- JSON.stringify(costs); %>
                            }]
                            },
                            options: {
                            title: {
                                display: true,
                                text: "Total Spending ($) of the Month"
                            }
                            }
                        });
                    </script>
                </div>
            </div>
